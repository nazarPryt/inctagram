{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "paths": {
            "@/*": ["./src/*"],
            "@/public/*": ["./public/*"],
            "@/locales/*": ["./locales/*"]
        }
    },
    "include": ["next-env.d.ts", "process.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
